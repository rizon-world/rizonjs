{
    "name": "@rizon-world/rizonjs",
    "version": "0.1.0",
    "license": "Apache-2.0",
    "description": "A JavasSript Open Source Library for Rizon",
    "homepage": "https://github.com/rizon-world/rizonjs#readme",
    "main": "build/index.js",
    "typings": "build/index.d.ts",
    "bugs": {
        "url": "https://github.com/rizon-world/rizonjs/issues"
    },
    "author": {
        "name": "RIZON"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rizon-world/rizonjs.git"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "keywords": [
        "rizon",
        "atolo",
        "cosmos",
        "tendermint",
        "ibc",
        "sdk",
        "rpc"
    ],
    "scripts": {
        "test": "cross-env NODE_ENV=test jest",
        "build": "yarn clean && yarn build:lib && yarn build:js && yarn build:docs",
        "build:lib": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline",
        "build:docs": "rimraf docs/lib && typedoc --excludeExternals --excludeNotDocumented --readme none --out docs/lib --hideBreadcrumbs --disableSources",
        "clean": "rimraf build",
        "lint": "eslint '**/*.{ts,js}'",
        "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json,md,html,yml}'",
        "bump": "npm version"
    },
    "dependencies": {
        "@cosmjs/stargate": "^0.27.1",
        "@types/uuid": "^8.3.4",
        "crypto-browserify": "^3.12.0",
        "crypto-js": "^4.1.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.0",
        "@babel/core": "^7.17.0",
        "@babel/plugin-proposal-class-properties": "^7.16.7",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@types/crypto-js": "^4.1.0",
        "@types/jest": "^27.4.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.19.0",
        "gts": "^3.1.0",
        "jest": "^27.5.0",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.3",
        "typedoc": "^0.22.11",
        "typedoc-plugin-markdown": "^3.11.13",
        "typescript": "^4.4.4"
    }
}
